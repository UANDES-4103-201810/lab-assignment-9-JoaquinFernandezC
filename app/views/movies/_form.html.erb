<%= form_for @movie do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :movie_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :movie_description %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, id: :movie_duration %>
  </div>

  <div class="field">
    <%= collection_select(:director_id, 0, Director.all,
                          :id, :full_name) %>
  </div>

  <div class="field">
    <%= form.label :release_date %>
    <%= form.datetime_select :release_date, id: :movie_release_date %>
  </div>

  <div class="field">
    <%= form.label :address_id %>
    <%= form.text_field :address_id, id: :movie_address_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
